@model IEnumerable<Study.Models.Product>
@{
    ViewData["Title"] = "Tablet";
}

<main>    
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row pb-2">
                    <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
                        <div class="bg-dark me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
                            <div class="my-3 py-3">
                                <h2 class="display-5">@product.Mark</h2>
                                <p class="lead">@product.Name</p>
                                <div class="text-secondary">
                                    <a asp-action="Details" class="custom-btn btn-5 form-control" asp-route-productId="@product.Id">Satın Al</a>
                                </div>
                            </div>
                            <div class="bg-light shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"><img src="@product.ImageUrl" /></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</main>
